include data.pug

header.header#header
    .header__container.container 
        .header__wrapper.header__wrapper
            .header__inner.header__inner--logo
                a(href="/" title="title").header__logo  
                    img(src="./images/svg/ico-logo.svg" alt="" class="header__logo-picture")
                    .header__logo-text virtualdc
                button(type="button").header__btn-menu
            .header__inner.header__inner--contacts 
                each item in headerContacts
                    a(href="#" title=item).header__contacts-link=item 
            .header__inner.header__inner--nav
                .header__menu.menu
                    ul.menu__list
                        li.menu__item.menu__item--wrapper 
                            a(href="#", title="title").menu__link Wrapper
                            ul.menu__sub-list 
                                li.menu__sub-item 
                                    a(href="#", title="title").menu__sub-link Выделенные серверы 
                                li.menu__sub-item 
                                    a(href="#", title="title").menu__sub-link Item 2
                                li.menu__sub-item 
                                    a(href="#", title="title").menu__sub-link Item 3
                        each item in headerMenu 
                            li.menu__item 
                                a(href=item.link, title=item).menu__link=item.title
                    .menu__buttons 
                        a(href="#", title="title").menu__button.button Login 
                        a(href="#", title="title").menu__button.button.button--bg Sign up 
